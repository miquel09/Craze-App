<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Craze.Views.MainPage">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="125" />
            </Grid.RowDefinitions>
            <Image Source="Icon.png"
                   HeightRequest="200"/>
            <StackLayout Grid.Row="1"
                         Spacing="0"
                         VerticalOptions="FillAndExpand">
                <Button Text="Log in"
                        TextColor="White"
                        FontSize="Large"
                        BorderWidth="1"
                        BorderColor="DarkGray"
                        BackgroundColor= "#fab4c8"
                        VerticalOptions="FillAndExpand"
                        Clicked="btn_LogInClicked"
                        Margin="0"/>
                <Button Text="Sign up"
                        TextColor="White"
                        BorderWidth="1"
                        BorderColor="DarkGray"
                        FontSize="Large"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="#bec8e6"
                        Margin="0"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>